# ipsec.conf - strongSwan IPsec configuration file

# basic configuration

config setup
        # strictcrlpolicy=yes
        # uniqueids = no
        plutodebug=none
	interfaces="%defaultroute"

conn %default
        ikelifetime=60m
        keylife=20m
        rekeymargin=3m
        dpddelay=30
	dpdtimeout=40
	dpdaction=clear
	ike_frag=yes
	keyingtries=1
        auto=add
	pfs=yes
	rekey=yes
	authby=rsasig

conn rw-ikev2
        ike=aes256-sha256-modp2048
	ikev2=insist
	also=clip-server

conn rw-ikev1
        ike=aes256-sha1-modp2048
	ikev2=never
	also=clip-server

conn clip-server
        left=%defaultroute
        leftcert={SERVER_CERT}
	leftsendcert=always
        leftsubnet=0.0.0.0/0
	leftxauthserver=yes
	leftmodecfgserver=yes
        rightsendcert=always
	rightxauthclient=yes
	rightmodecfgclient=yes
	rightaddresspool={VIRT_ADDR_POOL}
	right=%any
	modecfgdns1=8.8.8.8
	modecfgdns2=8.8.4.4
	modecfgbanner="Unauthorized Access is Prohibited"
	modecfgpull=yes
